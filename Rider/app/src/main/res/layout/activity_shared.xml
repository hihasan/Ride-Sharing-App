<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15sp">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cng"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="32dp">
        <RelativeLayout
            android:id="@+id/shared_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8sp">

            <TextView
                android:id="@+id/rider_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/shared_img"
                android:text="Rider Name"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="8sp"
                android:layout_marginTop="8sp"
                android:textSize="24sp"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/rider_phone"
                android:layout_below="@+id/rider_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/shared_img"
                android:text="Rider Phone"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="8sp"
                android:layout_marginTop="8sp"
                android:textSize="24sp"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/car_types"
                android:layout_below="@+id/rider_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/shared_img"
                android:text="Car Types"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="8sp"
                android:layout_marginTop="8sp"
                android:textSize="24sp"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/ride_types"
                android:layout_below="@+id/car_types"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/shared_img"
                android:text="Car Types"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="8sp"
                android:layout_marginTop="8sp"
                android:textSize="24sp"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/fare"
                android:layout_below="@+id/ride_types"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/shared_img"
                android:text="Fare"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="8sp"
                android:layout_marginTop="8sp"
                android:textSize="24sp"
                android:textColor="@android:color/black"/>



        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/cng"
        android:background="@android:color/holo_red_light"
        android:text="Confirm"
        android:textColor="@android:color/white" />


</RelativeLayout>